<h2>会員一覧</h2>

<table>

  <thred>

    <tr>

      <th>会員ID</th>

      <th>氏名</th>

      <th>メールアドレス</th>

      <th>ステータス</th>

    </tr>

  </thred>

  <tbody>

    <% @customers.each do |customer| %>

    <tr>

      <th><%= customer.id %></th>

      <th><%= link_to customer.first_name, admin_customer_path(customer.id) %>
          <%= link_to customer.last_name, admin_customer_path(customer.id) %>
      </th>

      <th><%= customer.email %></th>

      <th><% if customer.is_deleted == nil %>

            退会

          <% else %>

            有効

          <% end %>

      </th>

    </tr>

    <% end %>

  </tbody>

</table>