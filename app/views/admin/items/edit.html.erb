<h2>商品編集画面</h2>

<%= form_with model: @item,url:admin_item_path, method: :patch, local: true do |f| %>

  <label for="inputImage">商品画像</label>
  <%= f.file_field :image, autofocus: true, placeholder: "商品画像", accept: "image/*" %><br>

  <label for="inputName">商品名</label>
  <%= f.text_field :name, placeholder: "商品名" %><br>

  <label for="inputIntroduction">商品説明</label>
  <%= f.text_area :introduction, placeholder: "商品説明" %><br>

  <label for="inputPrice">税抜価格</label>
  <%= f.text_field :price, placeholder: "税抜価格" %>円<br>

  <%= f.submit "変更を保存" %>

<% end %>