<!DOCTYPE html>
<html>
  <head>
    <title>NaganoCake</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <header>
      <% if customer_signed_in? %>
        <li>
          <%= link_to "マイページ", customers_my_page_path %>
        </li>
        <li>
          <%= link_to "商品一覧", items_path %>
        </li>
        <li>
          <%= link_to "ユーザーログアウト", destroy_customer_session_path, method: :delete %>
        </li>
      <% else %>
        <li>
          <%= link_to "ユーザー新規登録", new_customer_registration_path %>
        </li>
        <li>
          <%= link_to "ユーザーログイン", new_customer_session_path %>
        </li>
      <% end %>

      <% if admin_signed_in? %>
        <li>
          <%= link_to "管理者ログアウト", destroy_admin_session_path, method: :delete %>
        </li>
        <li>
          <%= link_to "商品登録", new_admin_item_path %>
        </li>
        <li>
          <%= link_to "商品一覧", admin_items_path %>
        </li>
        <li>
          <%= link_to "会員一覧", admin_customers_path %>
        </li>
      <% else %>
        <li>
          <%= link_to "管理者ログイン", new_admin_session_path %>
        </li>
      <% end %>

    </header>
    <%= yield %>
  </body>
</html>
